{
	"$schema": "./node_modules/rome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},

	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"ignore": [
			"node_modules",
			"dist",
			".turbo",
			".next",
			".tamagui",
			"android",
			"packages/ui/types"
		]
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"ignore": [
			"node_modules",
			"dist",
			".turbo",
			".next",
			".tamagui",
			"android",
			"packages/ui/types"
		]
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"quoteStyle": "single",
			"trailingComma": "es5"
		}
	}
}
